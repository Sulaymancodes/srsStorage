<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cave - <%= folderName %></title>
    <style>
        :root {
            --primary-color: #3b82f6;
            --secondary-color: #60a5fa;
            --background-dark: #0f172a;
            --background-light: #1e293b;
            --text-color: #e2e8f0;
            --text-muted: #94a3b8;
            --card-background: #1e293b;
            --border-color: #334155;
            --success-color: #22c55e;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            line-height: 1.6;
            color: var(--text-color);
            background-color: var(--background-dark);
            min-height: 100vh;
        }

        main {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: var(--primary-color);
        }

        .breadcrumb {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 2rem;
            color: var(--text-muted);
        }

        .breadcrumb a {
            color: var(--primary-color);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .breadcrumb a:hover {
            color: var(--secondary-color);
        }

        button {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 0.375rem;
            cursor: pointer;
            font-size: 0.875rem;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background-color: var(--primary-color);
            color: var(--text-color);
        }

        .btn-primary:hover {
            background-color: var(--secondary-color);
            box-shadow: 0 0 15px rgba(59, 130, 246, 0.4);
        }

        .btn-secondary {
            background-color: var(--background-light);
            color: var(--text-color);
            border: 1px solid var(--border-color);
        }

        .btn-secondary:hover {
            background-color: var(--background-dark);
        }

        h2 {
            font-size: 1.5rem;
            margin: 2rem 0 1rem;
            color: var(--text-color);
        }

        .files-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
            background-color: var(--card-background);
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .files-table th,
        .files-table td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid var(--border-color);
        }

        .files-table th {
            background-color: var(--background-light);
            color: var(--text-muted);
            font-weight: 500;
            text-transform: uppercase;
            font-size: 0.75rem;
        }

        .files-table tr:hover {
            background-color: var(--background-light);
        }

        .file-size {
            color: var(--text-muted);
        }

        .file-date {
            color: var(--text-muted);
            font-size: 0.875rem;
        }

        .empty-state {
            text-align: center;
            color: var(--text-muted);
            padding: 3rem;
            background-color: var(--card-background);
            border-radius: 0.5rem;
            border: 1px solid var(--border-color);
            margin-top: 2rem;
        }

        dialog {
            background-color: var(--card-background);
            border: 1px solid var(--border-color);
            border-radius: 0.75rem;
            padding: 2rem;
            color: var(--text-color);
            max-width: 400px;
            width: 90%;
            position: fixed; /* Ensures the dialog is fixed relative to the viewport */
            top: 50%; /* Centers vertically */
            left: 50%; /* Centers horizontally */
            transform: translate(-50%, -50%); /* Offsets the dialog by half its width and height */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        dialog::backdrop {
            background-color: rgba(0, 0, 0, 0.5);
        }


        .form-group {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        label {
            color: var(--text-muted);
            font-size: 0.875rem;
        }

        input[type="text"] {
            padding: 0.75rem;
            border: 1px solid var(--border-color);
            background-color: var(--background-dark);
            border-radius: 0.375rem;
            color: var(--text-color);
            font-size: 1rem;
        }

        input[type="file"] {
            background-color: var(--background-dark);
            padding: 0.75rem;
            border: 1px solid var(--border-color);
            border-radius: 0.375rem;
            color: var(--text-color);
        }

        input[type="file"]::file-selector-button {
            background-color: var(--background-light);
            color: var(--text-color);
            border: 1px solid var(--border-color);
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
            cursor: pointer;
            margin-right: 1rem;
        }

        .dialog-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
        }

        @media (max-width: 768px) {
            .files-table {
                display: block;
                overflow-x: auto;
            }

            main {
                padding: 1rem;
            }
        }
    </style>
</head>
<body>
    <main>
        <h1><%= folderName %></h1>
        <div class="breadcrumb">
            <a href="/home"><%= username %></a>
            <span>/</span>
            <span><%= folderName %></span>
        </div>

        <button id="create-file-btn" class="btn-primary">Upload a File</button>

        <h2>Uploaded Files</h2>
        <% if (files.length > 0) { %>
            <table class="files-table">
                <thead>
                    <tr>
                        <th>File Name</th>
                        <th>Size</th>
                        <th>Uploaded At</th>
                        <th>Action</th>
                        <th>Delete File</th>
                    </tr>
                </thead>
                <tbody>
                    <% files.forEach(file => { %>
                        <tr>
                            <td><%= file.name %></td>
                            <td class="file-size"><%= (file.size / 1024).toFixed(2) %> KB</td>
                            <td class="file-date"><%= new Date(file.uploadedAt).toLocaleString() %></td>
                            <td>
                                <a href="/download-file/<%= file.id %>" download="<%= file.name %>">
                                    <button class="btn-secondary">Download</button>
                                </a>
                            </td>
                            <td>
                                <form action="/delete-file/<%= file.id %>?folderId=<%= folderId %>" method="post" style="display: inline;">
                                    <button type="submit" class="btn-secondary" onclick="return confirm('Are you sure you want to delete this file?');">Delete</button>
                                </form>                              
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <div class="empty-state">
                <p>No files uploaded yet. Click the Upload a File button to get started.</p>
            </div>
        <% } %>

        <dialog id="create-file">
            <form action="/uploadfile" enctype="multipart/form-data" method="post">
                <h2>Upload File</h2>
                <div class="form-group">
                    <label for="fileName">File name:</label>
                    <input type="text" name="fileName" id="fileName" required placeholder="Enter file name">
                    <input type="hidden" name="folderId" value="<%= folderId %>">
                    <input type="file" name="uploaded_file" required />
                    <div class="dialog-buttons">
                        <button type="submit" class="btn-primary">Upload</button>
                        <button type="button" id="close-popup" class="btn-secondary">Cancel</button>
                    </div>
                </div>
            </form>
        </dialog>
    </main>

    <script>
        const fileDialogue = document.getElementById("create-file");
        const createFileBtn = document.getElementById("create-file-btn");
        const closeBtn = document.getElementById("close-popup");

        createFileBtn.addEventListener("click", () => {
            fileDialogue.showModal();
        });

        closeBtn.addEventListener("click", () => {
            fileDialogue.close();
        });

        // Close dialog when clicking outside
        fileDialogue.addEventListener('click', (e) => {
            const dialogDimensions = fileDialogue.getBoundingClientRect();
            if (
                e.clientX < dialogDimensions.left ||
                e.clientX > dialogDimensions.right ||
                e.clientY < dialogDimensions.top ||
                e.clientY > dialogDimensions.bottom
            ) {
                fileDialogue.close();
            }
        });
    </script>
</body>
</html>