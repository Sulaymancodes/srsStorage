<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Folder: <%= folderName %></title>
</head>
<body>
  <h1><%= folderName %></h1>
  <p><a href="/home"><%= username %></a> / <%= folderName %></p>
  <button id="create-file-btn">Upload a File</button>
  <h2>Uploaded Files</h2>
  <% if (files.length > 0) { %>
    <table border="1" cellspacing="0" cellpadding="10">
      <thead>
        <tr>
          <th>File Name</th>
          <th>Size</th>
          <th>Uploaded At</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% files.forEach(file => { %>
          <tr>
            <td><%= file.name %></td>
            <td><%= (file.size / 1024).toFixed(2) %> KB</td> <!-- Size in KB -->
            <td><%= new Date(file.uploadedAt).toLocaleString() %></td> <!-- Human-readable date -->
            <td>
              <a href="/<%= file.path %>" download="<%= file.name %>">
                <button>Download</button>
              </a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>No files uploaded yet.</p>
  <% } %>

  <dialog id="create-file">
    <form action="/uploadfile" enctype="multipart/form-data" method="post">
        <div class="form-group">
          <label for="fileName">File name:</label>
          <input type="text" name="fileName" required>
          <input type="hidden" name="folderId" value="<%= folderId %>">
          <input type="file" name="uploaded_file" required />
          <input type="submit" value="Upload" />
        </div>
      </form>
      <button id="close-popup">Close</button>
  </dialog>
 
</body>
<script>
    const fileDialogue = document.getElementById("create-file");
    const createFileBtn = document.getElementById("create-file-btn");
    const closeBtn = document.getElementById("close-popup");

    createFileBtn.addEventListener("click", () => {
        fileDialogue.showModal();
    })

    closeBtn.addEventListener("click", () => {
        fileDialogue.close();
    })
</script>
</html>
